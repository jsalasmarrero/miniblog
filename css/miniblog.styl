gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
gris_texto= #7A7A7A

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?-hdpymy');
	src:url('../fonts/icomoon.eot?#iefix-hdpymy') format('embedded-opentype'),
		url('../fonts/icomoon.ttf?-hdpymy') format('truetype'),
		url('../fonts/icomoon.woff?-hdpymy') format('woff'),
		url('../fonts/icomoon.svg?-hdpymy#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}


a
	color naranja
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	
header
	background gris_oscuro
	color white 
	padding 0.5em
	position relative
	overflow hidden 
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1
	
	.logo
		border-right 1px solid azul
		width 60px
		img
			width 52px
	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-size 14px
			text-decoration none
			font-weight bold
			font-style italic
		.publicar
			background naranja
			color white
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float right
			margin -3px 1em 0 0
			&:before
				display inline-block
				margin 0 3px 0 0
				content "\e600"
				font-family "iconitos"
				
		.titulo
			font-size 18px
			font-weight normal
			margin 0px
			padding 0px
	.usuario
		position absolute
		right 0
		top 10px
		.avatar
			margin 0 1.2em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%

		.flechita
			background naranja
			color white
			display block
			text-align right
			position absolute
			width 50%
			top 15px
			right 0
			padding 2px
			text-decoration none
			&:after
				content "\e603"
				font-family "iconitos"
				font-size 1em
				text-shadow 1px 1px 0 black
.left
	float left
.right
	float right

nav
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-top 20px solid transparent
		border-bottom 20px solid transparent
		border-left 7px solid white
		content""
		position absolute
		top 0
		left 0px
	.menu
		height 40px
		line-height 40px
		overflow-x auto
		margin 0
		padding 0
		white-space nowrap
		li
			display inline-block
			a
				text-decoration none
				color white
				padding 0 0.2em
				display block
				margin 0 0.5em
.posts
	padding 0.5em
	.post
		margin-bottom 0.5em
		background white
		border-radius 0 0 0.5em 0.5em
		color gris_texto
		box-shadow 2px 2px 10px rgba(black, 0.5)
			
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			.datos
				float right
				.comentarios
					text-decoration none
					background gris_texto
					border-radius 3px
					color white
					padding 2px 5px
					margin 0 1em 0 0
				.estrellita
					text-decoration none
					&:after
						font-family "iconitos"
						color #E0D561
						text-decoration none
						content "\e601"
			.votos
				float left
				.down
				.up  
					text-decoration none
				.down
					color red
					&:before
						font-family "iconitos"
						content "\e603"
						font-size 1em
				.up
					color green
					&:before
						font-family "iconitos"
						content "\e602"
						font-size 1em
		.descripcion
			color gris_texto
			.detalles
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 1.5em 0
				.fecha
					float right
					margin 0 1em 0 0
				.tag
					background azul
					color white
					text-decoration none
					padding 0.2 0.5em
					border-radius 0.5em
				.titulo
					margin 0
					font-size 18px
					color gris_oscuro
					font-style italic
					padding 0.5em 0.5em 0 0
			.imagen
				margin 0
				float left
				img
					height 160px
					width 120px
					vertical-align top
footer
	background naranja
	color rgba(white, 0.5)
	text-align center
	width 100%
	padding 1em
	h3
		font-size 14px
		font-weight normal
		strong
			display block
		.mejor
			&:before
			&:after
				content"-"
@media screen and (min-width 768px)
	header
		.titular
			.publicar
				position relative
				padding-left 3em
				&:before
					left 0px
					top -10px
					font-size 2.5em
					position absolute
	body
	.posts
		.post
			vertical-align top
			display inline-block
			width 46%
			&:nth-child(odd)
				margin-right 2%
