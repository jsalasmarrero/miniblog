gris_oscuro = #444
azul = #22bce0
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	
header
	background gris_oscuro
	color white 
	padding 0.5em
	position relative 
	
	.logo
		border-right 1px solid azul
		width 60px
		img
			width 52px
	.titular
		margin 0 80px 0 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 10px
			padding 10px
	.usuario
		position absolute
		right 0
		top 0
		.avatar
			img
				width 50px
				border-radius 50%
nav
	 background azul
	 
